import pandas as pd
from sklearn.datasets import load_iris

# рдбреЗрдЯрд╛ рд▓реЛ
iris = load_iris()
df = pd.DataFrame(iris.data, columns=iris.feature_names)

# Descriptive Stats
print("ЁЯУК Mean (рдФрд╕рдд):", df['petal length (cm)'].mean())
print("ЁЯУЙ Std Dev (рдлреИрд▓рд╛рд╡):", df['petal length (cm)'].std())
print("ЁЯУР Median (рдмреАрдЪ рд╡рд╛рд▓рд╛):", df['petal length (cm)'].median())

# Histogram (Probability Distribution)
